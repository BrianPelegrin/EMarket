<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TecnoMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TecnoMarket.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jquery-dataTable/dataTables.bootstrap5.min.css" asp-append-version="true" />
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/jquery-dataTable/jquery-3.5.1.js"></script>
    <script src="~/lib/jquery-dataTable/jquery.dataTables.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ">
            <div class="container-fluid">
                <a class="navbar-brand border-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-shop display-6 "></i> TecnoMarket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-start">
                        <li class="nav-item">
                            <a class="nav-link  text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            
                        </li>
                        <li class="nav-item">
                            <form class="d-flex"  asp-action="Index" asp-controller="Home" method="get">
                                <input class="form-control me-2" type="text" name="SearchValue"  placeholder="Buscar producto...">
                                <button class="btn btn-outline-dark mt-auto" type="submit">Buscar</button>
                            </form>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end">
                        <partial name="_ValidationSessionPartial" />
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <partial name="_ModalPartial" />
    <partial name="~/Views/Shop/_ShoppingCartPartial.cshtml" />
    <div class="d-flex flex-column mb-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted  bg-white">
        <div class=" container text-center text-black">Copyright© Brian Pelegrin</div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-dataTable/jquery-3.5.1.js"></script>
    <script src="~/lib/jquery-dataTable/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
