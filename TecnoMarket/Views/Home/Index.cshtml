@using TecnoMarket.Core.ViewModels;
@model List<CategoryViewModel>

<header class="bg-dark ">
    <div class="container-flud">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                
                @foreach (var category in @Model)
                {
                    if (category.Id == 1)
                    {
                        <div class="carousel-item active">
                            <img src="https://ununsplash.imgix.net/photo-1416339134316-0e91dc9ded92?q=75&fm=jpg&s=883a422e10fc4149893984019f63c818" class="d-block w-100" alt="@category.Description">
                        </div>
                    }
                    else
                    {
                         <div class="carousel-item">
                        <img src="https://ununsplash.imgix.net/photo-1416339134316-0e91dc9ded92?q=75&fm=jpg&s=883a422e10fc4149893984019f63c818" class="d-block w-100" alt="@category.Description">
                        </div>

                    }                   
                }
                

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</header>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class=" justify-content-center">
            @foreach (var category in @Model)
            {
                <h3 c>@Html.DisplayFor(x=> category.Description)</h3>
                <div class="row my-3">
                    @foreach (var item in category.Products)
                    {
                        <div class="col-md-3 mb-5">
                            <div class="card h-100 shadow-lg">
                                <!-- Product image-->
                                <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="...">
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">@Html.DisplayFor(x=> item.Name)</h5>
                                        <!-- Product price-->
                                @Html.DisplayFor(x=> item.Price)
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="ProductView" asp-controller="Products" asp-route-id="@item.Id">Ver Detalles</a></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <hr />

            }
        </div>
    </div>
</section>


