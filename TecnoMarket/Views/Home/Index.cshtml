<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class=" justify-content-center">
            @foreach (var category in @Model)
            {
                @if (category.Products.Count > 0)
                {
                    <h3 c>@Html.DisplayFor(x=> category.Description)</h3>
                    <div class="row my-3">
                        @foreach (var item in category.Products)
                        {
                            <div class="col-md-3 mb-5">
                                <div class="card h-100 shadow-lg">
                                    <!-- Product image-->
                                    @if (item.Pictures != null)
                                    {
                                        @if (item.Pictures.Count > 0)
                                        {

                                            <img class="card-img-top" src="@String.Format("data:image/jpg/jpeg;base64,{0}", item.Pictures.Select(x=>x.Image).First().ToString())" alt="...">
                                        }
                                        else
                                        {
                                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="...">
                                        }
                                    }
                                    <!-- Product details-->
                                    <div class="card-body p-4">
                                        <div class="text-center">
                                            <!-- Product name-->
                                            <h5 class="fw-bolder">@Html.DisplayFor(x=> item.Name)</h5>
                                            <!-- Product price-->
                                @Html.DisplayFor(x=> item.Price)
                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" asp-action="ProductView" asp-controller="Products" asp-route-id="@item.Id">Ver Detalles</a></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <hr />
                }


            }
        </div>
    </div>
</section>


