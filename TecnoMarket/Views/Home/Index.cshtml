@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <partial name="Privacy.cshtml" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="m-3">
        <form method="post" id="Formulario" onsubmit="EnviarFormulario(event)">
            <div class="form-group">
                <label for="nombre" class="form-label">Nombre:</label>
                <input type="text" class="form-control" name="nombre" />
            </div>
            <button type="submit" class="btn btn-success">Enviar</button>
        </form>
    </div>
</div>



<button onclick="MostrarSweet()" class="btn btn-primary">Mostrar Basica</button>

<script>
function MostrarSweet() {
    Swal.fire('Guardado','Guardado Exitosamente','success');
}

function EnviarFormulario(e) {
    e.preventDefault();

    Swal.fire({
        icon:'question',
        showCancelButton: true,
        confirmButtonText:'Si',
        title: 'Quieres enviar los datos?'
    }).then((resultado) => {
        if (resultado.isConfirmed) {

            const formulario = document.getElementById('Formulario');
            formulario.submit();
        }else{
            Swal.fire('Se Cancelo','Peticion Cancelada Exitosamente','error')
        }
    })
}
</script>