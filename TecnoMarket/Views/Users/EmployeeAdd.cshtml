@using TecnoMarket.Core.ViewModels
@model UserRegistrationViewModel


<div class="container mt-5 d-flex justify-content-center" id="formProduct">
    <form method="post" asp-action="EmployeeEdit" asp-controller="Users">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    Formulario de Empleados
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-group col-sm-12 ">
                        <label asp-for="FullName" class="form-label">Nombre Completo:</label>
                        <input asp-for="FullName" class="form-control " placeholder="Digite su Nombre Completo..." />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Email" class="form-label">Correo:</label>
                        <input asp-for="Email" type="email" class="form-control " placeholder="Digite su correo..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 ">
                        <label asp-for="PhoneNumber" class="form-label">Telefono:</label>
                        <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Digite su Telefono..." />
                        <span asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group col-sm-6">
                        <label asp-for="Password" class="form-label">Contraseña:</label>
                        <input asp-for="Password" class="form-control" placeholder="Digite su contraseña..." />
                        <span asp-validation-for="Password " class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm-6 ">
                        <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña:</label>
                        <input asp-for="ConfirmPassword" class="form-control " placeholder="Digite su contraseña nuevamente..." />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-success" type="submit">Guardar</button>
                <a asp-action="EmployeeList" asp-controller="Users" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </form>
</div>



@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}