@using TecnoMarket.Core.ViewModels
@model List<ProductViewModel>;

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h2 class="card-title">Lista de Productos</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Price</th>
                        <th>Categoria</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody class="table-dark">
                    @foreach (var item in @Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x=> item.Name)</td>
                            <td>@Html.DisplayFor(x=> item.Description)</td>
                            <td>@Html.DisplayFor(x=> item.Price)</td>
                            <td>@Html.DisplayFor(x=> item.Category.Description)</td>
                            <td>@Html.DisplayFor(x=> item.Statu.Description)</td>
                            <td>
                                <a  class="btn btn-primary"><i class="bi bi-pencil"></i></a>
                                <button onclick="OnDelete(@item.Id)" class="btn btn-danger"><i class="bi bi-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

<script>
    function OnDelete(id) {
        Swal.fire({
            title: 'Quieres Modificar el estado de este producto?',
            icon: 'question',
            showCancelButton: false,
            showDenyButton: true,
            denyButtonText: 'Cancelar'
        })
            .then((respuesta) => {
                if (respuesta.isConfirmed) {
                    fetch(`http://localhost:5211/Productos/ProductDelete/${id}`, {
                        method: 'DELETE',
                    });
                    Swal.fire('Modificado', 'El estado ha sido modificado exitosamente', 'success');
                } else if (respuesta.isDenied) {
                    Swal.fire('Cancelado', '', 'error');
                }
            })
    }
</script>