@using TecnoMarket.Core.ViewModels
@model CategoryViewModel
@{
    ViewData["Title"] = "Categorias";
    Layout = null;
}


    <form method="post" asp-action="CategoryAdd" asp-controller="Category">
        <input type="text" hidden class="form-control" asp-for="Id" placeholder="Digite la descripcion de la categoria..." />
        <div class="form-group container p-5 ">
            <label class="form-label " asp-for="Description">Nombre:</label>
            <input type="text" class="form-control" asp-for="Description" placeholder="Digite la descripcion de la categoria..." />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
         <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-success">Guardar</button>
      </div>
       
    </form>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
        }


