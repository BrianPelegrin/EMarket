@using TecnoMarket.Core.ViewModels
@model CategoryViewModel
@{
    ViewData["Title"] = "Categorias";
}

<div class="container-fluid mt-5 d-flex justify-content-center" >
    <form method="post" asp-action="CategoryAdd" asp-controller="Category">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    Formulario de Categoria
                </h3>
            </div>
            <div class="card-body">
                <input type="text" hidden class="form-control" asp-for="Id" placeholder="Digite la descripcion de la categoria..." />
                
                    <div class="form-group ">
                        <label class="form-label " asp-for="Description">Nombre:</label>
                        <input type="text" class="form-control" asp-for="Description" placeholder="Digite la descripcion de la categoria..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
            
            </div>
            <div class="card-footer">
                <button class="btn btn-success" type="submit">Guardar</button>
                <a asp-action="CategoryList" asp-controller="Category" class="btn btn-secondary" type="submit">Volver</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
        }