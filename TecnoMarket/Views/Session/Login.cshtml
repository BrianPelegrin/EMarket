@using TecnoMarket.Core.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_SesionLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-register-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Iniciar Sesion</h1>
                                </div>
                                <form asp-action="Login" >
                                    <div class="form-group mb-3">
                                        <label asp-for="Email" class="form-label">Correo:</label>
                                        <input asp-for="Email" class="form-control"  placeholder="Digite su correo..." />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label asp-for="Password" class="form-label">Contraseña:</label>
                                        <input asp-for="Password" class="form-control" placeholder="Digite su contraseña..." />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mb-3">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                                            <label class="custom-control-label" for="customCheck">
                                                Remember
                                                Me
                                            </label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <button type="submit" class="btn btn-primary  btn-block">
                                            Iniciar Sesion
                                        </button>
                                    </div>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-action="ForgotPassword">Olvidaste tu contraseña?</a>
                                </div>
                                <div class="text-center">
                                    <a asp-action="Register" class="small">Crea una Cuenta!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_NotificationPartial" />

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
        }

